<% layout('layouts/boilerplate') %>



    <!-- here campground is camp -->

    <div class="row">
        <h1 class="text-center"> Edit property</h1>
        <div class="col-6 offset-3">

            <form action="/property/<%= property.id %>?_method=PUT" method="post" novalidate class="validated-form"
                enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">enter the city of property</label>
                    <input class="form-control" id="title" type="text" value="<%= property.title %>"
                        name="property[title]" required>
                </div>
                <br>

                <div class="mb-3">
                    <label class="form-label" for="location">enter the state of property</label>
                    <input class="form-control" value="<%= property.location %>" id="location" type="text"
                        name="property[location]" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">enter the price of property</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input id="price" value="<%= property.price %>" name="property[price]" type="text"
                            class="form-control" placeholder="0.00" aria-label="price" aria-describedby="price-label"
                            required>
                    </div>
                </div>


                <div class="mb-3">
                    <label class="form-label" for="description">enter the description of property</label>
                    <textarea class="form-control" id="description" type="text" name="property[description]"
                        required><%=property.description%></textarea>
                </div>

                <div class="mb-3">

                    <label for="image" class="form-label">upload images</label>
                    <input class="form-control" type="file" name="image" id="image" multiple>
                </div>

                <div class="mb-3">
                    <% property.images.forEach(function (img,i) { %>
                        <img src="<%= img.thumbnail %>" class="img-thumbnail" alt="">
                        <div class="form-check-inline">
                            <input type="checkbox" id="image-<%= i %>" name="deleteImages[]" value="<%=img.filename%>">
                        </div>
                        <label for="image-<%= i %>">delete</label>
                        <% }) %>
                </div>
                <button class="btn btn-info">update property</button>
            </form>

        </div>

    </div>